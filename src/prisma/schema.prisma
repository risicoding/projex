model Projects {
  id          String   @id @default(uuid())
  name        String
  userId      String
  workspaceId String
  board       Board[]
  createdAt   DateTime @default(now())

  @@index([id, userId, workspaceId])
}

model Board {
  id         String    @id @default(uuid())
  name       String
  Projects   Projects? @relation(fields: [projectsId], references: [id])
  projectsId String?
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./src/prisma/sqlite.db"
}
